<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.dao.CompetitionBaseinfoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.entity.CompetitionBaseinfoEntity" id="competitionBaseinfoMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="company" column="company"/>
        <result property="introduce" column="introduce"/>
        <result property="requirement" column="requirement"/>
        <result property="time" column="time"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

	<select id="queryObject" resultType="io.renren.entity.CompetitionBaseinfoEntity">
		select * from competition_baseinfo where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.entity.CompetitionBaseinfoEntity">
		select * from competition_baseinfo
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from competition_baseinfo 
	</select>
	 
	<insert id="save" parameterType="io.renren.entity.CompetitionBaseinfoEntity">
		insert into competition_baseinfo
		(
			`id`, 
			`name`, 
			`type`, 
			`company`, 
			`introduce`, 
			`requirement`, 
			`time`, 
			`create_time`, 
			`update_time`
		)
		values
		(
			#{id}, 
			#{name}, 
			#{type}, 
			#{company}, 
			#{introduce}, 
			#{requirement}, 
			#{time}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.entity.CompetitionBaseinfoEntity">
		update competition_baseinfo 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="company != null">`company` = #{company}, </if>
			<if test="introduce != null">`introduce` = #{introduce}, </if>
			<if test="requirement != null">`requirement` = #{requirement}, </if>
			<if test="time != null">`time` = #{time}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from competition_baseinfo where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from competition_baseinfo where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>